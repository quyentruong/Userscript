{
  "env": {
    "browser": true,
    "jquery": true,
    "greasemonkey": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "globals": {
    "saveAs": false,
    "JSZip": false,
    "jEpub": false,
    "GM_config": false
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-console": 0
  }
}
